    <script>
        let docs = document.querySelector('#btnlnk');
        docs.addEventListener('click', submit)
        function submit() {
            let lnk = document.getElementById('btnlnk')
            let content = document.getElementById('conts').value
            if (isNaN(content)) {
                //!-- let mod = document.getElementById('mod');
                //mod.style.display = 'block'; --}}

                alert("Please enter a valid age");
            }
            else {
                if (content > 0 && content <= 5) {
                    lnk.setAttribute('href', 'https://www.bradford.gov.uk/media/1908/7-nutrition-guidelines-1-to-5-years.pdf');

                }
                else if (content > 5 && content <= 12) {
                    lnk.setAttribute('href', 'https://www.wsh.nhs.uk/CMS-Documents/Patient-leaflets/PaediatricDepartment/6296-1-Healthy-eating-for-6-12-year-olds.pdf');
                }
                else if (content > 12 && content <= 18) {
                    lnk.setAttribute('href', 'https://www.winchesterhospital.org/health-library/article?id=214376');
                }
                else if (content > 18 && content <= 60) {
                    lnk.setAttribute('href', 'https://www.eatthis.com/best-foods-for-every-decade/');
                }
                else if (content > 60) {
                    lnk.setAttribute('href', 'https://www.healthdirect.gov.au/healthy-eating-over-60');
                }
            }

        };

    </script>


